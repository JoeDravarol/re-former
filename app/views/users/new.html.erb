<h2>HTML Form</h2>
<form accept-charset="UTF-8" action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="username">Username:</label>
  <input id="username" type="text" name="user[username]"><br/>

  <label for="email">Email:</label>
  <input id="email" type="email" name="user[email"]><br/>

  <label for"password">Password:</label>
  <input id="password" type="password" name="user[password]"><br/>

  <input type="submit" value="Submit">
</form>

<h2>Rails form_tag Form</h2>
<%= form_tag "/users", method: "post" do %>
  <%= label_tag :username, "Username:" %>
  <%= text_field_tag :username %>
  
  <%= label_tag :email, "Email:" %>
  <%= email_field_tag :email %>

  <%= label_tag :password, "Password:" %>
  <%= password_field_tag :password %>

  <%= submit_tag "Submit" %>
<% end %>

<h2>Rails form_for Form</h2>
<%= form_for @user do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username, placeholder: "Your username here" %>

  <%= f.label :email, "Email:" %>
  <%= f.email_field :email, :value => "example@example.com" %>

  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %>
  <%= f.submit "Submit" %>
<% end %>